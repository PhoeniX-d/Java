<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<context-param>
		<param-name>GlobalParam</param-name>
		<param-value>globalparam</param-value>
	</context-param>
	<servlet>
		<servlet-name>hw1</servlet-name>
		<servlet-class>HelloServlet1</servlet-class>
		<init-param>
			<param-name>HelloServlet1</param-name>
			<param-value>helloservlet1</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>hw1</servlet-name>
		<url-pattern>/hello1</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>hw2</servlet-name>
		<servlet-class>HelloServlet2</servlet-class>
		<init-param>
			<param-name>HelloServlet2</param-name>
			<param-value>helloservlet2</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>hw2</servlet-name>
		<url-pattern>/hello2</url-pattern>
	</servlet-mapping>
</web-app>