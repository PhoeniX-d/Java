type- sudo mkdir jvm/ /usr/lib/jvm/

type- sudo tar -zxvf jdk-16_linux-x64_bin.tar.gz
type - ls


type- sudo mv jdk-16/ /usr/lib/jvm

type- cd /usr/lib/jvm/jdk-16/


if you are use mint
type- sudo nano /etc/profile 

            or

if you are use ubuntu
type- sudo gedit /etc/profile


past the line-


JAVA_HOME=/usr/lib/jvm/jdk-16
JRE_HOME=$JAVA_HOME/jre
PATH=$PATH:JAVA_HOME/bin:$JRE_HOME/bin
export JAVA_HOME
export JRE_HOME
export PATH


save the file


type- sudo update-alternatives --install "/usr/bin/java" "java" "/usr/lib/jvm/jdk-16/bin/java" 1

type- sudo update-alternatives --install "/usr/bin/javac" "javac" "/usr/lib/jvm/jdk-16/bin/javac" 1


type- sudo update-alternatives --set java /usr/lib/jvm/jdk-16/bin/java

type- sudo update-alternatives --set javac /usr/lib/jvm/jdk-16/bin/javac


type - source /etc/profile
